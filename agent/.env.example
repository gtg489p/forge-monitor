# Forge Monitor Agent — environment variables
# Copy to .env and fill in your values.

# Hub URL (required) — your Railway or self-hosted hub deployment
HUB_URL=https://your-hub.railway.app

# Node identifier (required) — url-safe, unique per server
NODE_ID=my-server

# Shared bearer token (required) — must match FORGE_INGEST_SECRET on the hub
FORGE_INGEST_SECRET=changeme

# Display name shown in the fleet dashboard (optional, defaults to NODE_ID)
NODE_NAME=My Server

# Push interval in milliseconds (optional, default: 5000)
PUSH_INTERVAL_MS=5000
